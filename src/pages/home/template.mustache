    <a href="{{{ molino.baseHref }}}{{{ blogData.path }}}/index.html">
      {{blogData.title}} by {{blogData.authorName}}
    </a>
  </h2>
  {{> postsList}}
  {{/hasPosts}}
  {{^hasPosts}}
