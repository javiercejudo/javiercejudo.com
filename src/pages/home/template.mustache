<div class="container">
  <p>Hey, I'm Javier!</p>

  <div id="root"></div>

  {{#hasProjects}}
  <h2><a href="{{{ molino.baseHref }}}projects/index.html">Projects</a></h2>
  <ul>
    {{#projects}}
    <li>
      <a href="{{{ molino.baseHref }}}projects/{{{ path }}}">{{ name }}</a>
    </li>
    {{/projects}}
  </ul>
  {{/hasProjects}}
